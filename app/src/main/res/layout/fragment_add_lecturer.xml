<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:elevation="3dp"
    android:background="@color/colorPrimary3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_name"
        android:textSize="21sp"/>

    <EditText
        android:id="@+id/edit_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/first_name"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textColorHint="@color/my_kind_of_grey"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/text_middle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/middle_name"
        android:textSize="21sp"/>

    <EditText
        android:id="@+id/edit_middle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/middle_name"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textColorHint="@color/my_kind_of_grey"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/text_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_name"
        android:textSize="21sp"/>

    <EditText
        android:id="@+id/edit_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/last_name"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textColorHint="@color/my_kind_of_grey"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="21sp"/>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textColorHint="@color/my_kind_of_grey"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/button_add_lecturer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:text="@string/create"
        android:textSize="18sp"
        android:background="@drawable/button_background_three"/>
</LinearLayout>